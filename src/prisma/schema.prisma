generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String     @unique
  emailVerified DateTime?
  image         String?
  userdrugs     UserDrug[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Drug {
  id                         Int           @id @default(autoincrement())
  drugName                   String        @unique
  pilLink                    String
  drugImagesLink             String
  counsellingPointsText      String
  counsellingPointsVoiceLink String
  otherResources             String?
  acute                      Boolean       @default(false)
  chronic                    Boolean       @default(false)
  auxInstruction             String
  drugClasses                DrugToClass[] // Relation to junction table
  userdrugs                  UserDrug[]
  drugEntry                  DrugEntry[]
}

model DrugClass {
  id    Int           @id @default(autoincrement())
  name  String
  drugs DrugToClass[] // Relation to junction table
}

model DrugToClass {
  drug        Drug      @relation(fields: [drugId], references: [id])
  drugId      Int
  drugClass   DrugClass @relation(fields: [drugClassId], references: [id])
  drugClassId Int

  @@id([drugId, drugClassId]) // Composite primary key
}

model UserDrug {
  id                Int    @id @default(autoincrement())
  user              User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String
  drug              Drug   @relation(fields: [drugId], references: [id], onDelete: Cascade)
  drugId            Int
  dosingInstruction String
}

model DrugEntry {
  id       Int    @id @default(autoincrement())
  drug     Drug   @relation(fields: [drugId], references: [id], onDelete: Cascade)
  drugId   Int
  method   String
  unitDose String
}
